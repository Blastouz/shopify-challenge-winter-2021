<div class="container">
  <h2>Add a new Image</h2>
  <div class="form">
    <%= simple_form_for(@image) do |f| %>
      <div class="form-group">
        <%= f.input :title %>
      </div>
      <div class="form-group">
        <%= f.input :rating %>
      </div>
      <div class="form-group">
        <%= f.input :url %>
      </div>
      <div class="form-group">
        <%= f.input :legend, :as => :text %>
      </div>
      <div class="form-group">
        <%= f.input :photo, as: :file %>
      </div>
        <%= f.submit 'Send the image', :class => 'btn btn-primary' %>
      <% end %>
    </div>
</div>

