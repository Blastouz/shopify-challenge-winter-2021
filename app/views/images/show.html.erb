<div class="d-flex align-items-center justify-content-center m-3">
  <h1 style="margin-right: 8px">Image</h1>
  <%= link_to "Back to the list", images_path %>
</div>
<div class="container" style="max-width: 60%;">
  <div class="card-mb-3">
    <% if @image.url == "" %>
     <%=image_tag(@image.photo, class: "image") if @image.photo.attached? %>
    <% else %>
      <img class="image-top d-flex" style="width: 40%; margin-left: auto; margin-right: auto;" src=" <%= @image.url %>" alt="<% @image.title %>">
    <% end %> 
        <h2 class="card-title"> <%= @image.title %> </h2>
    <div class="content-new-review d-flex">
      <div class="card-content" style=" width: 80%">
        <h4 class="card-text my-3"> Legend </h4>
        <p class="card-text my-3"> <%= @image.legend %> </p>
      </div>

      <div class="reviews-form">
        <h5>Enter a review:</h5>
        <%= simple_form_for [@image, @review] do |f| %>
          <%= f.input :rating %>
          <%= f.input :content %>
          <%= f.submit "Submit review", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>

    <div class="reviews-list">    
    <h4>Reviews: </h4>
    <ul>
        <% @image.reviews.each do |review|  %>
      <li>
        <%= review.rating %>
        <%= review.content %>
      </li>
      <% end %>
    </ul>
    <div>    
  </div>
</div>